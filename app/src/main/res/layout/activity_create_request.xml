<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CreateRequest">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/dr">
    </ImageView>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/user"
            android:tint="#222121"

            />

        <EditText
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/pname"
            android:layout_gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:hint="Patient's Name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_call_black_24dp"/>

        <EditText
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/pcontact"
            android:layout_gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:hint="Contact Number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_email_black_24dp"
            android:tint="#000000"/>
        <EditText
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/pemail"
            android:paddingLeft="20dp"
            android:hint="e-mail address"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/dateicon"
            android:src="@drawable/ic_date_range_black_24dp"
            android:layout_marginTop="10dp"
            android:tint="#000000"/>
        <EditText
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/pdate"
            android:paddingLeft="20dp"
            android:hint="Click to select date"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_enhanced_encryption_black_24dp"
            android:tint="#000000" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="290dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="#DAD5D5"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:theme="@style/Spinner"
            android:spinnerMode="dropdown" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_format_align_justify_black_24dp"
            android:layout_marginTop="10dp"
            android:tint="#000000"/>
        <EditText
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/purpose"
            android:paddingLeft="20dp"
            android:hint="Purpose"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_marginTop="10dp"
            android:tint="#000000"/>
        <EditText
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/parea"
            android:paddingLeft="20dp"
            android:hint="Area"/>


    </LinearLayout>


    <Button
        android:id="@+id/send"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:drawablePadding="50dp"
        android:paddingRight="20dp"
        android:text="  SEND"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />
</LinearLayout>