<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0A0A"
    tools:context=".UserProfile"

    android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/gradientbackground"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/v"
                app:civ_border_color="#101010"
                app:civ_border_width="4dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#FFFFFF"
                android:id="@+id/key"
                android:textStyle="bold"
                android:textSize="21sp"/>
        </LinearLayout>







    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_access_time_black_24dp"

            />

        <TextView
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:id="@+id/ps"
            android:paddingLeft="20dp"
            android:text="Status"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_call_black_24dp"
            android:tint="#FFFFFF"

            />

        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/pc"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="6200966132"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_person_black_24dp"
            android:tint="#FFFFFF"/>

        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/pn"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textColor="#FFFFFF"
            android:text="Vanshika Singolia"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_enhanced_encryption_black_24dp"
            android:tint="#FFFFFF"/>
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb"
            android:paddingLeft="20dp"
            android:text="o+ positive"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_date_range_black_24dp"
            android:layout_marginTop="10dp"
            android:tint="#FFFFFF"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/pa"
            android:paddingLeft="20dp"
            android:text="age"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="60dp"
            android:id="@+id/fab"
            android:layout_height="60dp"
            android:layout_marginLeft="200dp"
            android:elevation="5dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:backgroundTint="#FFFFFF"
            app:fabSize="normal">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>
    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:itemBackground="@color/design_default_color_on_secondary"
        app:itemIconTint="@color/design_default_color_on_primary"
        app:itemTextColor="#FFFFFF"
        app:menu="@menu/menu_navigation">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>










