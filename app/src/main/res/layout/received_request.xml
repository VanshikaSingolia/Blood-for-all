<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040404"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D6D7D7">

        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white"
            android:clickable="true"
            android:elevation="4dp"
            android:scrollbars="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="15dp">

                <LinearLayout
                    android:id="@+id/Header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/r1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Recipients's Name"
                            android:textColor="@color/colorPrimary"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/capriola" />
                    </LinearLayout>

                </LinearLayout>
                <!--Main Top Section Name, Time, nd Img-->

                <RelativeLayout
                    android:id="@+id/detailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Header"
                    android:layout_marginTop="20dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Blood Group :"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r2"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="O+"
                        android:textSize="18sp" />

                    <!---->

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t1"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="15dp"
                        android:text="Purpose :"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t1"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:text="Heart Surgery"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <!---->

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t2"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="15dp"
                        android:text="Email :"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t2"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:text="vanicusat@gmail.com"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <!---->

                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t3"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="15dp"
                        android:text="Contact :"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t3"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:textColor="#000000"
                        android:text="03035503503"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/t5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t4"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="15dp"
                        android:text="Date:"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t4"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:textColor="#DC3030"
                        android:text="02/05/2020"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/u"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t5"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="15dp"
                        android:text="Area:"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t5"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:textColor="#000000"

                        android:text="Kochi"
                        android:textSize="18sp" />








                    <!---->
                </RelativeLayout>
                <!--Details Section-->



            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>