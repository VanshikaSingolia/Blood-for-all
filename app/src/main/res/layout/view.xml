<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:background="#D6D7D7"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:elevation="4dp"
            android:background="@drawable/white"
            android:scrollbars="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <LinearLayout
                    android:id="@+id/Header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="100dp"
                        android:layout_height="80dp"

                        android:id="@+id/i"
                        android:src="@drawable/user" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Name_of_Donor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Donor's Name"
                            android:textColor="@color/colorPrimary"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/isAvailableTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#6AB344" />

                        <TextView
                            android:id="@+id/userIDHere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>
                <!--Main Top Section Name, Time, nd Img-->

                <RelativeLayout
                    android:id="@+id/detailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Header"
                    android:layout_marginTop="12dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Blood Group :"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Donor_BloodGrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="A+"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <!---->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/Donor_BloodGrp"
                        android:layout_marginTop="5dp"
                        android:text="Area :"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/donor_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/Donor_BloodGrp"
                        android:layout_marginTop="5dp"
                        android:text="Sargodha"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                    <!---->

                    <TextView
                        android:id="@+id/qqqqqqqqqq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/donor_area"
                        android:layout_marginTop="5dp"
                        android:text="Email :"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/donor_emailaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/donor_area"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/qqqqqqqqqq"
                        android:gravity="right"
                        android:text="jndjnvdjnjdnvjdnvjd"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <!---->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/donor_emailaddress"
                        android:layout_marginTop="5dp"
                        android:text="Contact :"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/donor_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/donor_emailaddress"
                        android:layout_marginTop="5dp"
                        android:text="03035503503"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/donor_contact"
                        android:layout_marginTop="5dp"
                        android:text="Status :"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/donor_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/donor_contact"
                        android:layout_marginTop="5dp"
                        android:text="Fit to donate."
                        android:textColor="#CF0A0A"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="129dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/i11"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/ic_call_black_24dp"
                            android:tint="#EF0F0F" />

                        <ImageView
                            android:id="@+id/i22"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/ic_message_black_24dp"
                            android:tint="#EF0F0F" />

                        <ImageView
                            android:id="@+id/i33"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/ic_email_black_24dp"
                            android:tint="#EF0F0F" />

                    </LinearLayout>




                    <!---->
                </RelativeLayout>
                <!--Details Section-->


                <Button
                    android:id="@+id/rq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detailsLayout"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:background="@drawable/login2_button"
                    android:text="REQUEST BLOOD"
                    android:textColor="#fff" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>